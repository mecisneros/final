<%- include('../partials/header.ejs') %>

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Flights List</h1>
        <!-- <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Administration Page </li>
                    </ol> -->
        <div id="content">
            <% if (success == 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
            </div>
            <% } %>
            <% if (success == 1) { %>
            <div class="alert alert-success" role="alert">
                <%= message %>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-hover table-striped ">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Airline</th>
                            <th>Departure time</th>
                            <th>Arrival time</th>
                            <th>Departure airport</th>
                            <th>Arrival airport</th>
                            <th>Layovers</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% flights.forEach(function(flight){ %>
                        <tr>
                            <td><%= flight.flight_num %></td>
                            <td><%= flight.airline %></td>
                            <td><%= dtm(flight.departure_timestamp) %></td>
                            <td><%= dtm(flight.arrival_timestamp) %></td>
                            <td><%= flight.departure_airport %></td>
                            <td><%= flight.arrival_airport %></td>
                            <td><%= flight.layovers %></td>
                            <td><%= flight.price %></td>
                            <td>
                                <a href="/admin/flights/edit/<%= flight.flight_num %>" title="Edit">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a href="/admin/flights/delete/<%= flight.flight_num %>" title="Delete"
                                    onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <a href="/admin/flights/add" class="btn btn-success"><i class="fas fa-plus"></i> Add flight</a>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>