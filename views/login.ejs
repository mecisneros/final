<%- include('partials/header.ejs') %>
        <div class="container-fluid my-5">
            <form class="form-signin" method="POST">
              <h1 class="h3 mb-4 font-weight-normal">Please sign in</h1>
              <input type="text" name="username" class="form-control my-3" placeholder="Username" required autofocus>
              <input type="password" name="password" class="form-control mt-3 mb-4" placeholder="Password" required>
              <button class="btn btn btn-primary btn-block mb-3" type="submit">Sign in</button>
            </form>
            <% if (typeof loginError != "undefined" && loginError) { %>
            <h5 class="login-error text-center text-danger">Wrong credentials!</h3>
        <% }%>
        </div>
<%- include('partials/footer.ejs') %>